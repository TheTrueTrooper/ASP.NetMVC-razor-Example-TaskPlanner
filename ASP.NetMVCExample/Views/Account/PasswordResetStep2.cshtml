@model ASP.NetMVCExample.Models.Users.UserPasswordReset

@{
    ViewBag.Title = "Account - PasswordReset";
    Scripts.Render("~/bundles/jqueryval");
}
<p class="lead">For security reasons we will send you a email with a resset code. Enter your email and code with a new password.</p>
<p class="lead">We will need to do this, because for better security we make the password a one way ecription trip. In short not even our techs can read your passwords orginal form!</p>

<h2>Change Password</h2>

<section id="PassswordReset">
    @using (Html.BeginForm("PasswordReset", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
        @Html.AntiForgeryToken()
                <hr />
                @Html.HiddenFor(m=>m.Salt)
                @Html.HiddenFor(m=>m.ResetCode)
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.NewConfirmPassword, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.NewConfirmPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Submit" class="btn btn-default" />
                    </div>
                </div>
    }
</section>