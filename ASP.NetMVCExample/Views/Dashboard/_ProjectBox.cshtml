<div class="col-sm-4">
    <!--spacer-->
    <div style="padding:20px;">
        <div class="MyProjectBox">
            <h2> @PageData["ProjectName"]</h2>
            <div class="row">
                <div class="col-sm-4">
                    <h4 class="text-center"> Opening Date: </h4> 
                </div>
                <div class="col-sm-4">
                    <h4 class="text-center"> Closing Date: </h4>
                </div>
                <div class="col-sm-4">
                    <h4 class="text-center"> Time Left: </h4>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    <p class="text-center">@{ @Html.Raw(((DateTime)PageData["StartDate"]).ToString("d"));}</p>
                </div>
                <div class="col-sm-4">
                    <p class="text-center">@{ @Html.Raw(((DateTime)PageData["EndDate"]).ToString("d"));}</p>
                </div>
                <div class="col-sm-4">
                    <p class="text-center">@{ @Html.Raw(((DateTime)PageData["StartDate"]).Subtract((DateTime)PageData["EndDate"]).ToString(@"ddd\:\ hh\:\ mm\:\ ss"));}</p>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <h4> Description </h4>
                    @PageData["Description"]
                </div>
            </div>
        </div>
    </div>
</div>