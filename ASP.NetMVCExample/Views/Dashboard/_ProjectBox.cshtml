<div class="col-sm-4">
    <!--spacer-->
    <div style="padding:20px;">
        <div class="MyProjectBox">
            <h2> @PageData["ProjectName"]</h2>
            <div class="row">
                <div class="col-sm-4">
                    <h4> Opening Date: </h4> 
                </div>
                <div class="col-sm-4">
                    <h4> Closing Date: </h4>
                </div>
                <div class="col-sm-4">
                    <h4> Time Left: </h4>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    @{ @Html.Raw(((DateTime)PageData["StartDate"]).ToString("d"));}
                </div>
                <div class="col-sm-4">
                    @{ @Html.Raw(((DateTime)PageData["EndDate"]).ToString("d"));}
                </div>
                <div class="col-sm-4">
                    @{ @Html.Raw(((DateTime)PageData["StartDate"]).Subtract((DateTime)PageData["EndDate"]).ToString(@"ddd\:hh\:mm\:ss"));}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <h4> Description </h4>
                    @PageData["Description"]
                </div>
            </div>
        </div>
    </div>
</div>